#include <iostream>

using namespace std;
int sp;
void kreska(int n){
    for(int k=0; k<n; k++)
    {
        cout << "\\";
    }
}
void spacja(int n){
    for(int k=0; k<n; k++)
    {
        cout << " ";
    }
}

void litera_a(){
    spacja(1);
    kreska(7);
    cout<<endl;
        for(int k=1; k<=6; k++)
        {
            if (k==3) {
                kreska(9);
            }
            else {
                kreska(3);
                spacja(3);
                kreska(3);
            }
            cout<<endl;
        }
}
void litera_b(){
    kreska(7);
    cout<<endl;
    for(int k=1; k<=6; k++)
    {
        if (k<=2) {kreska(3); spacja(2); kreska (3);}
        else if (k==3 || k==6) {kreska(8);}
        else if (k==4 || k==5) {kreska(3); spacja(3); kreska (3);}
        cout<<endl;
    }
}
void litera_c(){
    for (int k=1; k<=7; k++)
    {
        if (k==1 || k==7) {spacja(1); kreska(8);}
        if (k>=2 && k<=6) {kreska(3);}
        cout<<endl;
    }
}
void litera_d(){
    for (int k=1; k<=7; k++)
    {
        if (k==1 || k==7) {kreska(8);}
        else {kreska(3); spacja(3); kreska (3);}
        cout<<endl;
    }
}
void litera_e(){
    for (int k=1; k<=7; k++)
    {
        if (k==1 || k==7) {kreska(9);}
        else if (k==4) {kreska(6);}
        else {kreska(3);}
        cout<<endl;
    }
}
void litera_f(){
    for (int k=1; k<=7; k++)
    {
        if (k==1) {kreska(9);}
        else if (k==4) {kreska(6);}
        else {kreska(3);}
        cout<<endl;
    }
}
void litera_g(){
    for (int k=1; k<=7; k++)
    {
        if (k==1) {spacja(1); kreska(8);}
        else if (k==4) {kreska(3); spacja(1); kreska(5);}
        else if (k==7) {spacja(1); kreska(7);}
        else if (k>=2 && k<=3) {kreska(3);}
        else {kreska(3); spacja(3); kreska(3);}
        cout<<endl;
    }
}
void litera_h(){
    for (int k=1; k<=7; k++)
    {
        if (k==4) {kreska(9);}
        else {kreska(3); spacja(3); kreska(3);}
        cout<<endl;
    }
}
void litera_i(){
    for (int k=1; k<=7; k++)
    {
        spacja(3);
        kreska(3);
        cout<<endl;
    }
}
void litera_j(){
    for (int k=1; k<=7; k++)
    {
        if (k==1) {kreska(9);}
        else if (k>=5 && k<=6) {kreska(3); spacja(3); kreska(3);}
        else if (k==7) {spacja(1); kreska(7);}
        else {spacja(6); kreska(3);}
        cout<<endl;
    }
}
void litera_k(){
    sp=3;
    for (int k=1; k<=4; k++)
    {
        kreska(3);
        spacja(sp);
        kreska(3);
        cout<<endl;
        sp--;
    }
    for (int k=1; k<=3; k++)
    {
        kreska(3);
        spacja(sp+2);
        kreska(3);
        cout<<endl;
        sp++;
    }
}
void litera_l(){
    for (int k=1; k<=7; k++)
    {
        if  (k==7) {kreska(9);}
        else {kreska(3);}
        cout<<endl;
    }
}
void litera_n(){
    for (int k=1; k<=7; k++)
    {
        if (k==1 || k==7) {kreska(3); spacja(3); kreska(3);}
        if (k==2) {kreska(4);spacja(2);kreska(3);}
        if (k==3) {kreska(5);spacja(1);kreska(3);}
        if (k==4) {kreska(3);spacja(1);kreska(1);spacja(1);kreska(3);}
        if (k==5) {kreska(3);spacja(1);kreska(5);}
        if (k==6) {kreska(3);spacja(2);kreska(4);}
        cout<<endl;
    }
}
void litera_r(){
    kreska(8);
    cout<<endl;
    for (int k=1; k<=3; k++)
    {
        kreska(3);
        spacja(3);
        kreska(3);
        cout<<endl;
    }
    sp=0;
    for (int k=1; k<=3; k++)
    {
        sp++;
        kreska(3);
        spacja(sp);
        kreska(3);
        cout<<endl;
    }
}
void litera_s(){
    kreska(9);
    cout << endl;
    for (int k=1; k<=2; k++)
    {
        kreska(3);
        cout <<endl;
    }
    kreska(9);
    cout<<endl;
    for (int k=1; k<=2; k++)
    {
        spacja(6);
        kreska(3);
        cout <<endl;
    }
    kreska(9);
    cout << endl;
}
void litera_y(){
    sp=3;
    int sp2=0;
    for (int k=1; k<=2; k++)
    {
        spacja(sp2);
        kreska(3);
        spacja(sp);
        kreska(3);
        cout<<endl;
        sp=sp-2;
        sp2++;
    }
    spacja(sp2);
    kreska(5);
    cout<<endl;
    for (int k=1; k<=4; k++)
    {
        spacja(3);
        kreska(3);
        cout<<endl;
    }
}
void litera_z(){
    kreska(9);
    cout<<endl;
    sp=5;
    for (int k=1; k<=5; k++)
    {
        spacja(sp);
        kreska(3);
        cout<<endl;
        sp--;
    }
    kreska(9);
    cout << endl;
}

void wybor(char n){
    switch (n){
        case 'a': {
            litera_a();
            cout<<endl;
            break;
        }
        case 'b': {
            litera_b();
            cout<<endl;
            break;
        }
        case 'c': {
            litera_c();
            cout<<endl;
            break;
        }
        case 'd': {
            litera_d();
            cout<<endl;
            break;
        }
        case 'e': {
            litera_e();
            cout<<endl;
            break;
        }
        case 'f': {
            litera_f();
            cout<<endl;
            break;
        }
        case 'g': {
            litera_g();
            cout<<endl;
            break;
        }
        case 'h': {
            litera_h();
            cout<<endl;
            break;
        }
        case 'i': {
            litera_i();
            cout<<endl;
            break;
        }
        case 'j': {
            litera_j();
            cout<<endl;
            break;
        }
        case 'k': {
            litera_k();
            cout<<endl;
            break;
        }
        case 'l': {
            litera_l();
            cout<<endl;
            break;
        }
        case 'n': {
            litera_n();
            cout<<endl;
            break;
        }
        case 'r': {
            litera_r();
            cout<<endl;
            break;
        }
        case 's': {
            litera_s();
            cout<<endl;
            break;
        }
        case 'y': {
            litera_y();
            cout<<endl;
            break;
        }
        case 'z': {
            litera_z();
            cout<<endl;
            break;
        }
        case '_': {
            cout << endl << endl << endl;
            break;
        }
    }
}
void copis(int x){
    int l;
    l = x;
    char lit[l];
    for (x; x>=1; x--)
    {
        cin >> lit[x];
    }
    x = l;
    for (x; x>=1; x--)
    {
        wybor(lit[x]);
    }
}

int main()
{
    int x=5;
    cout << "Ile liter?: ";
    cin >> x;
    copis(x);

    return 0;
}
